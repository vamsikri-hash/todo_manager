<div class="container">
  <div class="content">
    <h2 class="todo-title">My To-do List</h2>
    <%= form_with(url: "/todos",method: "post",class: "form-content" ) do%>
     <%= text_field_tag 'todo_text',nil,placeholder: 'Whats next?',class: 'text-holder' %>
     <%= date_field_tag 'due_date',nil,class: 'date-holder'%>
     <%= submit_tag 'Add', class: 'btn-1'%>
    <%end%>
    <article class="todo-content">
      <%= render partial: "todo-section", locals: {
        section_title: "Overdue",
        todos: Todo.overdue,
        show_duedate: true
      } %>
      <%= render partial: "todo-section", locals: {
        section_title: "Due Today",
        todos: Todo.duetoday,
        show_duedate: false
      } %>
      <%= render partial: "todo-section", locals: {
        section_title: "Due Later",
        todos: Todo.duelater,
        show_duedate: true
      } %>
    </article>
  </div>
</div>
